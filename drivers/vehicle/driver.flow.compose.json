{
  "triggers": [
    {
      "id": "soc_reached",
      "title": { "en": "State of charge reached" },
      "titleFormat": "{device} reached {level}%",
      "tokens": [
        {
          "name": "level",
          "type": "number",
          "title": { "en": "Target SoC (%)" },
          "units": { "en": "%" },
          "example": "80"
        }
      ]
    },
    {
      "id": "charging_countdown",
      "title": { "en": "Time until charged" },
      "titleFormat": "{device} will be charged in {timeRemaining}",
      "tokens": [
        {
          "name": "timeRemaining",
          "type": "number",
          "title": { "en": "Time until charged" },
          "units": { "en": "min" },
          "example": "30"
        }
      ]
    }
  ],
  "actions": [
    {
      "id": "set_target_soc",
      "title": { "en": "Set target state of charge" },
      "titleFormat": "{device} set target SoC to {level}%",
      "args": [
        {
          "name": "level",
          "type": "dropdown",
          "title": { "en": "Target SoC (%)" },
          "values": [
            { "id": "100", "title": { "en": "100%" } },
            { "id": "90", "title": { "en": "90%" } },
            { "id": "80", "title": { "en": "80%" } },
            { "id": "70", "title": { "en": "70%" } },
            { "id": "60", "title": { "en": "60%" } },
            { "id": "50", "title": { "en": "50%" } }
          ]
        }
      ]
    },
    {
      "id": "activate_climate",
      "title": { "en": "Activate climate control" },
      "titleFormat": "{device} activate climate control"
    },
    {
      "id": "deactivate_climate",
      "title": { "en": "Deactivate climate control" },
      "titleFormat": "{device} deactivate climate control"
    },
    {
      "id": "activate_window_heating",
      "title": { "en": "Activate window heating" },
      "titleFormat": "{device} activate window heating for zone {zone}",
      "args": [
        {
          "name": "zone",
          "type": "dropdown",
          "title": { "en": "Zone" },
          "values": [
            { "id": "front", "title": { "en": "Front" } },
            { "id": "rear", "title": { "en": "Rear" } }
          ]
        }
      ]
    }
  ]
}